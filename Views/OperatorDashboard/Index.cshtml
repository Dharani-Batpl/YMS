@page
@model OperatorDashboardModel
@{
    
    Layout = "_Layout";
}

<div class="bg-light min-vh-100">

    <!-- Navbar -->
    <nav class="navbar navbar-expand navbar-dark bg-primary px-3">
        <div class="d-flex align-items-center">
            <i class="bi bi-truck fs-4 me-2"></i>
            <span class="navbar-brand mb-0 h1 fw-bold">YMS Operator</span>
        </div>

        <div class="ms-auto d-flex align-items-center text-white small">
            <div class="me-4 text-end">
                <div>Shift: Day Shift</div>
                <div>@DateTime.Now.ToString("ddd, MMM dd HH:mm:ss")</div>
            </div>
            <div class="dropdown">
                <a class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" href="#" role="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-person-circle fs-4 me-2"></i>
                    John Doe
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li><a class="dropdown-item" href="#">Profile</a></li>
                    <li><a class="dropdown-item" href="#">Log out</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container py-4">

        <!-- Active Task Card -->
        <div class="card rounded-3 shadow-sm mb-4 p-3">
            <h5 class="mb-0 text-primary fw-semibold">Active Task</h5>
        </div>

        <!-- My Tasks Card -->
        <div class="card rounded-3 shadow-sm p-3">

            <!-- Filters -->
            <div class="d-flex flex-wrap justify-content-between align-items-center mb-3">
                <div class="btn-group mb-2">
                    <button type="button" class="btn btn-primary active">All <span class="badge bg-secondary ms-1">45</span></button>
                    <button type="button" class="btn btn-outline-secondary">
                        <i class="bi bi-clock"></i> Assigned <span class="badge bg-warning text-dark ms-1">27</span>
                    </button>
                    <button type="button" class="btn btn-outline-secondary">
                        <i class="bi bi-check-circle"></i> Completed <span class="badge bg-success ms-1">18</span>
                    </button>
                </div>

                <div class="d-flex mb-2">
                    <select class="form-select me-2" style="width: 180px;">
                        <option selected>All Priorities</option>
                        <option>Critical</option>
                        <option>Urgent</option>
                        <option>Normal</option>
                    </select>

                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search VIN or Zone..." />
                        <button class="btn btn-primary" type="button"><i class="bi bi-search"></i></button>
                    </div>
                </div>
            </div>

            <!-- Task Table -->
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-primary text-primary align-middle">
                        <tr>
                            <th>VIN</th>
                            <th>Route</th>
                            <th>Priority</th>
                            <th>SLA Due</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="fw-bold">MA1ABC12345678901</td>
                            <td>
                                <small class="text-muted">Yard-12</small> &rarr; <span class="fw-semibold">Inspection</span>
                            </td>
                            <td><span class="badge border border-danger text-danger rounded-pill px-3">Critical</span></td>
                            <td>09:00</td>
                            <td><span class="badge bg-success rounded-pill px-3">COMPLETED</span></td>
                            <td><span class="badge bg-success rounded-pill px-3">COMPLETED</span></td>
                        </tr>
                        <tr>
                            <td class="fw-bold">MA1ABC12345678903</td>
                            <td>
                                <small class="text-muted">Audit</small> &rarr; <span class="fw-semibold">Rework</span>
                            </td>
                            <td><span class="badge border border-warning text-warning rounded-pill px-3">Urgent</span></td>
                            <td>09:40</td>
                            <td><span class="badge bg-success rounded-pill px-3">COMPLETED</span></td>
                            <td><span class="badge bg-success rounded-pill px-3">COMPLETED</span></td>
                        </tr>
                        <tr>
                            <td class="fw-bold">MA1ABC12345678905</td>
                            <td>
                                <small class="text-muted">Storage-A</small> &rarr; <span class="fw-semibold">Loading Bay</span>
                            </td>
                            <td>Normal</td>
                            <td>10:15</td>
                            <td><span class="badge bg-success rounded-pill px-3">COMPLETED</span></td>
                            <td><span class="badge bg-success rounded-pill px-3">COMPLETED</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <nav>
                <ul class="pagination justify-content-start">
                    <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1">&lt;</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">&gt;</a></li>
                </ul>
            </nav>
        </div>

    </div>
</div>

<!-- Required Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
