const addBreakBtn = document.getElementById("addBreakBtn");
const breakContainer = document.getElementById("breakContainer");
const breakRows = document.getElementById("breakRows");

let breakCount = 0;

addBreakBtn.addEventListener("click", () => {
  breakCount++;
  breakContainer.style.display = "block";

  const breakRow = document.createElement("div");
  breakRow.className = "row g-2 align-items-center mb-2";
  breakRow.id = `breakRow_${breakCount}`;

  breakRow.innerHTML = `
    <div class="col-md-4">
      <input type="time" class="form-control" name="Breaks[${breakCount}].From" required>
    </div>
    <div class="col-md-4">
      <input type="time" class="form-control" name="Breaks[${breakCount}].To" required>
    </div>
    <div class="col-md-2">
      <button type="button" class="btn btn-outline-danger-professional btn-sm removeBreakBtn" title="Remove">
        <span class="material-icons" style="font-size: 16px;">close</span>
      </button>
    </div>
  `;

  breakRows.appendChild(breakRow);

  // attach remove handler
  breakRow.querySelector(".removeBreakBtn").addEventListener("click", () => {
    breakRow.remove();
    if (breakRows.children.length === 0) breakContainer.style.display = "none";
  });
});

