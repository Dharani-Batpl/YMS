                            <!--  Reasonname -->
                            <label for="Reason_name" class="form-label">Reason Name  <span class="text-danger"><strong>*</strong></span></label>
                            <input type="text" class="form-control" id="Reason_name" name="Reason_name" required
                                   pattern="[A-Za-z0-9 ]+"
                                   title="Only letters and numbers are allowed. No spaces or special characters.">
                        </div>
                        <!--  Status select + hidden name sync -->
                        <div class="col-md-4">
                            <label for="Status_id" class="form-label">Status  <span class="text-danger"><strong>*</strong></span></label>
                            <select class="form-select" id="Status_id" name="Status_id"
                                    asp-items="@(ViewBag.StatusList as IEnumerable<SelectListItem>)" required>
                                <option value="" selected disabled>Select Status</option>
                            </select>

                        </div>
                    </div>
                </form>
            </div>

            <!--  Modal footer with actions -->
            <div class="modal-footer">
                <button type="button" class="btn btn-primary-professional" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary-professional" id="modalSubmitBtn" form="addEditForm">Add</button>
            </div>
        </div>
    </div>
</div>

