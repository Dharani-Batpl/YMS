<div class="modal fade" id="addEditModal" tabindex="-1" aria-labelledby="addEditModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">

            <!--  Modal header -->
            <div class="modal-header">
                <h6 class="modal-title" id="addEditModalLabel">Add/Edit Brand Master</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" style="filter: invert(1);"></button>
            </div>
            <!--  Modal body with form fields -->
            <div class="modal-body">
                <form id="addEditForm">
                    <!--  Hidden Id field -->
                    <input type="hidden" id="Brand_id" name="Brand_id" />
                    <div class="row g-3">
                        <div class="col-md-4">
                            <!--  BrandCode -->
                            <label for="Brand_code" class="form-label">Brand Code <span class="text-danger"><strong>*</strong></span></label>
                            <input type="text" class="form-control" id="Brand_code" name="Brand_code" required
                                   
                                   pattern="[A-Za-z0-9 ]+"
                                   title="Only letters, numbers, and spaces are allowed. No special characters.">
                        </div>
                        <div class="col-md-4">
                            <!--  Brandname -->
                            <label for="Brand_name" class="form-label">Brand Name <span class="text-danger"><strong>*</strong></span></label>
                            <input type="text" class="form-control" id="Brand_name" name="Brand_name" required
                                   pattern="[A-Za-z0-9 ]+"
                                   title="Only letters, numbers, and spaces are allowed. No special characters.">
                        </div>

                                                <!--  Country select + hidden name sync -->
                        <div class="col-md-4">
                            <label for="Country_id" class="form-label">Country <span class="text-danger"><strong>*</strong></span></label>
                            <select class="form-select" id="Country_id" name="Country_id"
                                    asp-items="@(ViewBag.CountryList as IEnumerable<SelectListItem>)" required>
                                <option value="" selected disabled>Select Country</option>
                            </select>

                        </div>

                        <div class="col-md-4">
                            <!-- Manufacturer -->
                            <label for="Manufacturer_name" class="form-label">Manufacturer <span class="text-danger"><strong>*</strong></span></label>
                            <input type="text" class="form-control" id="Manufacturer_name" name="Manufacturer_name" required
                                   pattern="[A-Za-z0-9 ]+"
                                   title="Only letters, numbers, and spaces are allowed. No special characters.">
                        </div>


                        <!--  Status select + hidden name sync -->
                        <div class="col-md-4">
                            <label for="Status_id" class="form-label">Status <span class="text-danger"><strong>*</strong></span></label>
                            <select class="form-select" id="Status_id" name="Status_id"
                                    asp-items="@(ViewBag.StatusList as IEnumerable<SelectListItem>)" required>
                                <option value="" selected disabled>Select Status</option>
                            </select>
                        </div>
                        <div class="row g-3">
                            <div class="col-12">
                                <!-- Description -->
                                <label for="Description" class="form-label">Description</label>
                                <textarea class="form-control" id="Description" name="Description" rows="5" 
                                          title="Only letters, numbers, and spaces are allowed. No special characters."></textarea>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

