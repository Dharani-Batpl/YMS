@model LivePicklistViewModel
<style>
    p{
        margin-bottom: 0.5rem; 
    }
</style>
<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center bg-secondary-subtle mb-3" style="max-width: 18rem;" >

                <div class="card-body">
                    <h5 class="card-title text-danger">Assigned</h5>
                    <p class="card-text">@Model.Assigned</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center  bg-warning-subtle mb-3" style="max-width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title text-warning">In Progress</h5>
                    <p class="card-text">@Model.InProgress</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center  bg-success-subtle mb-3" style="max-width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title text-success">Completed</h5>
                    <p class="card-text">@Model.Completed</p>
                </div>
            </div>
        </div>
        @* <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h5 class="card-title text-danger">At Risk</h5>
                    <p class="card-text">@Model.AtRisk</p>
                </div>
            </div>
        </div> *@
    </div>

    <div class="row flex-nowrap overflow-auto mb-4">
        @if (Model.Operators is null || !Model.Operators.Any())
        {
            <div class="col">
                <p>No operators available.</p>
            </div>
        }
        else
        {

            foreach (var oprator in Model.Operators)
            {
                <div class="col-sm-6 col-md-3 col-lg-3">
                    <div class="card bg-light mb-3" style="min-width: 18rem;">
                        <div class="card-header">
                            <h5 class="card-title">@oprator.Name</h5>
                        </div>
                        <div class="card-body-compact">
                            <p class="card-text">Active Picks: @oprator.ActivePicks</p>
                            <p class="card-text">Completed Today: @oprator.CompletedToday</p>
                            <p class="card-text">Location: @oprator.Location</p>
                            <p class="card-text">Last Activity: @oprator.LastActivity</p>
                            <button class="btn btn-primary">Contact</button>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
    <div id="livepickList" style="width:100%;" class="tabulator-bootstrap5"></div>
    
</div>

