@page
@model LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>YMA Operator Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #1f2a57;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .login-card {
            width: 360px;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0,0,0,0.3);
            background-color: #fff;
        }
        .header-icon {
            font-size: 36px;
            color: #4755a9;
        }
        .card-title {
            font-weight: 700;
            font-size: 1.8rem;
            color: #1f2a57;
        }
        .card-subtitle {
            font-size: 1rem;
            color: #4755a9;
        }
        .card-small-text {
            font-size: 0.85rem;
            color: #8a91a8;
        }
        .form-control:focus {
            box-shadow: none;
            border-color: #4e5ee6;
        }
        .btn-signin {
            background: linear-gradient(90deg, #4858d6 0%, #4351e5 100%);
            border: none;
            font-weight: 600;
        }
        .btn-signin:hover {
            background: linear-gradient(90deg, #3646b6 0%, #2a3db8 100%);
        }
        .btn-secure {
            background-color: #e6e8f7;
            border-radius: 50px;
            color: #2c357c;
            font-weight: 600;
            border: none;
        }
        .toast-position {
            position: fixed;
            top: 1rem;
            right: 1rem;
            z-index: 1055;
        }
    </style>
</head>
<body>

    @* <div class="toast toast-position align-items-center text-bg-success border-0 show" role="alert" aria-live="assertive" aria-atomic="true" id="logoutToast">
        <div class="d-flex align-items-center px-3 py-2">
            <i class="bi bi-check-circle-fill me-2 fs-4"></i>
            <div class="toast-body">
                
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" aria-label="Close" id="toastCloseBtn"></button>
        </div>
    </div> *@

    <div class="card login-card p-4">
        <div class="text-center mb-4">
            <i class="bi bi-truck header-icon"></i>
            <h5 class="card-title mt-2">YMS Operator</h5>
            <div class="card-subtitle">Yard Management Application</div>
            <div class="card-small-text mt-1">Secure Access Portal</div>
        </div>

        <form asp-controller="Home" asp-action="Login" method="post">
            <div class="mb-3 input-group">
                <span class="input-group-text bg-primary text-white border-0"><i class="bi bi-person-fill"></i></span>
                <input type="text" class="form-control" placeholder="Enter your username" aria-label="Username" />
            </div>
            <div class="mb-3 input-group">
                <span class="input-group-text bg-primary text-white border-0"><i class="bi bi-lock-fill"></i></span>
                <input type="password" class="form-control" placeholder="Enter your password" aria-label="Password" />
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" value="" id="rememberMe" />
                <label class="form-check-label" for="rememberMe">
                    Remember me for 30 days
                </label>
            </div>

            <button type="submit" class="btn btn-signin w-100 mb-3">
                <i class="bi bi-box-arrow-in-right me-2"></i> Sign In
            </button>

            <button type="button" class="btn btn-secure w-100">
                <i class="bi bi-shield-lock-fill me-2"></i> Secure Access to YMS Operations
            </button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('toastCloseBtn').addEventListener('click', () => {
            const toast = document.getElementById('logoutToast');
            toast.classList.remove('show');
            toast.style.display = 'none';
        });
    </script>
</body>
</html>
