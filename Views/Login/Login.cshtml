@{
    Layout = null;
}

@model YardManagementApplication.Models.LoginModel

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Yard Management Application – Login</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
</head>

<body>

    <!-- MOBILE VIEW -->
    <section class="mobile-hero d-lg-none">

        <main class="mobile-form d-flex flex-column align-items-center">

            <header class="mobile-header text-center mb-3">
                <h1 class="hero-title mb-0">Yard Management</h1>
            </header>

            <div class="card login-card border-0 rounded-0 p-2">
                <div class="card-body p-4">
                    <div class="text-center mb-3">
                        <img src="~/images/rockwell_logo_red.png" style="width: 40%; max-width: 220px;">
                    </div>

                    <h1 class="h3 text-center mb-4">Welcome Back!</h1>

                    <!-- 🚫 Disable autocomplete -->
                    <form autocomplete="off" asp-controller="Login" asp-action="Login" method="post">

                        <!-- Hidden fake fields (forces Chrome to disable suggestions) -->
                        <input type="text" style="display:none">
                        <input type="password" style="display:none">

                        <div class="form-floating mb-3">
                            <input type="text"
                                   asp-for="Username"
                                   class="form-control"
                                   id="m-username"
                                   required
                                   autocomplete="off"
                                   autocorrect="off"
                                   autocapitalize="none"
                                   spellcheck="false" />
                            <label for="m-username">Username</label>
                        </div>

                        <div class="form-floating mb-2">
                            <input type="password"
                                   asp-for="Password"
                                   class="form-control"
                                   id="m-password"
                                   required
                                   autocomplete="new-password" />
                            <label for="m-password">Password</label>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="m-keep-signed-in">
                                <label class="form-check-label" for="m-keep-signed-in">Keep me logged in</label>
                            </div>
                            <a class="small" href="#">Forgot password?</a>
                        </div>

                        <button type="submit" class="btn btn-dark btn-lg w-100 rounded-3">
                            Login
                        </button>

                        <br /><br />
                        <img src="~/images/powered by ftoptix.png" style="width: 30%; display: block; margin: 0 auto;" />

                    </form>
                </div>
            </div>

            <footer class="mobile-footer mt-3 text-center">
                <h6 class="mb-0">© 2025 Rockwell Automation. All rights reserved.</h6>
            </footer>

        </main>
    </section>

    <!-- DESKTOP VIEW -->
    <main class="auth-layout d-none d-lg-flex">

        <!-- Left Panel -->
        <aside class="col-5 col-xl-4 hero-panel p-0 d-none d-lg-block">
            <div class="hero-overlay"></div>

            <div class="hero-content">
                <header>
                    <div class="d-flex justify-content-center align-items-center" style="height: 100px;">
                        <h1 class="hero-title mb-3">Yard Management</h1>
                    </div>
                </header>

                <footer class="legal">
                    <div class="d-flex justify-content-center align-items-center" style="height: 100px;">
                        <img src="~/images/rockwell_logo_white.png" style="width: 40%;">
                    </div>
                    <h6 style="font-size:10px; text-align:center" class="hero-title mb-3">
                        © 2025 Rockwell Automation. All rights reserved.
                    </h6>
                </footer>
            </div>
        </aside>

        <!-- Right Login Panel -->
        <section class="flex-grow-1 d-flex align-items-center justify-content-center bg-light">

            <div class="login-wrap w-100 px-4 px-xl-5">
                <div class="card login-card rounded-0">

                    <div class="card-body p-4 p-md-5">

                        <h2 class="text-center fw-bold mb-1">Welcome Back!</h2>
                        <p class="text-center text-muted mb-4">Sign in to continue</p>

                        <!-- 🚫 Disable autocomplete -->
                        <form class="needs-validation"
                              autocomplete="off"
                              asp-controller="Login"
                              asp-action="Login"
                              method="post"
                              novalidate>

                            <!-- Fake hidden fields -->
                            <input type="text" style="display:none">
                            <input type="password" style="display:none">

                            <div class="form-floating mb-3">
                                <input asp-for="Username"
                                       type="text"
                                       autocomplete="off"
                                       autocorrect="off"
                                       autocapitalize="none"
                                       spellcheck="false"
                                       class="form-control"
                                       id="username"
                                       required />
                                <label for="username">Username</label>
                                <div class="invalid-feedback">Please enter your username.</div>
                            </div>

                            <div class="form-floating mb-2">
                                <input asp-for="Password"
                                       type="password"
                                       autocomplete="new-password"
                                       class="form-control"
                                       id="password"
                                       required />
                                <label for="password">Password</label>
                                <div class="invalid-feedback">Password is required.</div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="keep-signed-in">
                                    <label class="form-check-label" for="keep-signed-in">Keep me logged in</label>
                                </div>
                                <a class="small" href="#">Forgot Password?</a>
                            </div>

                            <button type="submit" class="btn btn-dark btn-lg w-100">Login</button>

                            <br /><br />
                            <img src="~/images/powered by ftoptix.png" style="width: 30%; display: block; margin: 0 auto;" />

                        </form>
                    </div>
                </div>
            </div>

        </section>

    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
